generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["typedSql"]
  schema          = "destellos"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model clientes {
  idCliente   Int                  @id @default(autoincrement())
  correo      String
  nombre      String
  telefono    String

  // Relación con cliente_promociones
  cliente_promociones cliente_promociones[]
}

model promociones {
  idPromocion   Int                  @id @default(autoincrement())
  fechaDesde    String
  fechaHasta    String
  descripcion   String
  activa        Boolean

  // Relación con cliente_promociones
  cliente_promociones cliente_promociones[]
}

model cliente_promociones {
  idCliente         Int
  idPromocion       Int
  premio            String

  // Relaciones
  Cliente    clientes    @relation(fields: [idCliente], references: [idCliente])
  Promocion  promociones @relation(fields: [idPromocion], references: [idPromocion])

  @@id([idCliente, idPromocion]) // Llave primaria compuesta
}
